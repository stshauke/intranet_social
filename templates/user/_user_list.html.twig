<div class="row">
    {% for user in users %}
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        {% if user.profileImage %}
                            <img src="{{ asset('uploads/profiles/' ~ user.profileImage) }}" alt="Photo de profil" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;">
                        {% else %}
                            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                <span>{{ user.fullName[:1]|upper }}</span>
                            </div>
                        {% endif %}
                    </div>
                    <h5 class="card-title">{{ user.fullName }}</h5>
                    <p class="card-text text-muted">{{ user.email }}</p>

                    <button class="btn btn-sm btn-outline-primary open-message-modal" data-recipient-id="{{ user.id }}" data-recipient-name="{{ user.fullName }}">
                        ðŸ“© Envoyer un message
                    </button>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12">
            <div class="alert alert-info">Aucun utilisateur trouvÃ©.</div>
        </div>
    {% endfor %}
</div>

<div class="mt-3">
    {{ knp_pagination_render(users) }}
</div>
