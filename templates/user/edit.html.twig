{# templates/user/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Modifier mon profil</h1>

    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        <div class="mb-3">
            {{ form_label(form.fullName) }}
            {{ form_widget(form.fullName, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.bio) }}
            {{ form_widget(form.bio, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.profileImage) }}
            {{ form_widget(form.profileImage, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">Sauvegarder les modifications</button>
        <a href="{{ path('app_user_profile', {'id': user.id}) }}" class="btn btn-secondary">Annuler</a>
    {{ form_end(form) }}
</div>
{% endblock %}
