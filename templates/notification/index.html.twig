{% extends 'base.html.twig' %}

{% block title %}Notifications{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Toutes les notifications</h1>

    {% if notifications %}
        <form action="{{ path('app_notification_mark_all_read') }}" method="post" class="mb-3">
            <button type="submit" class="btn btn-success btn-sm">Tout marquer comme lu</button>
        </form>

        <ul class="list-group">
            {% for notification in notifications %}
                <li class="list-group-item d-flex justify-content-between align-items-center {% if not notification.isRead %}bg-light{% endif %}">
                    <div>{{ notification.message }}</div>
                    <small class="text-muted">{{ notification.createdAt|date('d/m/Y H:i') }}</small>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <div class="alert alert-info mt-4">
            Vous n'avez aucune notification pour l'instant.
        </div>
    {% endif %}
</div>
{% endblock %}
