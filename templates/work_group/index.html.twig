{% extends 'base.html.twig' %}

{% block title %}Groupes de travail{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Groupes de travail</h1>

    <a href="{{ path('app_work_group_new') }}" class="btn btn-primary mb-4">Créer un nouveau groupe</a>

    {% if work_groups %}
        <div class="row">
            {% for group in work_groups %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">{{ group.name }}</h5>
                            <p class="card-text">{{ group.description }}</p>
                            <p class="card-text">
                                <strong>Type :</strong> {{ group.isPrivate ? 'Privé' : 'Public' }}
                            </p>
                            <a href="{{ path('app_work_group_show', { id: group.id }) }}" class="btn btn-outline-primary btn-sm">Voir le groupe</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info">Aucun groupe pour le moment.</div>
    {% endif %}
</div>
{% endblock %}
