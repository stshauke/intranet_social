{% extends 'base.html.twig' %}

{% block title %}Créer un groupe{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Créer un nouveau groupe de travail</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.isPrivate) }}
            {{ form_widget(form.isPrivate, {'attr': {'class': 'form-select'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.members) }}
            {{ form_widget(form.members, {'attr': {'class': 'form-select select2', 'multiple': 'multiple'}}) }}
        </div>

        <button class="btn btn-success">Créer le groupe</button>
    {{ form_end(form) }}

    <a href="{{ path('app_work_group') }}" class="btn btn-secondary mt-3">Retour à la liste des groupes</a>
</div>
{% endblock %}
