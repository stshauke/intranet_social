{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">{{ post.title }}</h5>
            <p class="card-text">{{ post.content|nl2br }}</p>

            {# Like du post #}
            <button class="btn like-post-btn {{ post.isLikedByUser(app.user) ? 'btn-primary' : 'btn-outline-primary' }}"
                data-post-id="{{ post.id }}">
                üëç J'aime ({{ post.likes|length }})
            </button>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <h5>Commentaires</h5>
        </div>

        <div class="card-body">
            {{ form_start(commentForm) }}
                {{ form_widget(commentForm.content, {'attr': {'class': 'form-control mb-2', 'placeholder': '√âcrire un commentaire...'}}) }}
                <button class="btn btn-primary">Commenter</button>
            {{ form_end(commentForm) }}
        </div>

        <div class="list-group list-group-flush">
            {% for comment in comments %}
                <div class="list-group-item">
                    <div class="d-flex justify-content-between">
                        <strong>{{ comment.user.fullName }}</strong>
                        <small class="text-muted">{{ comment.createdAt|date('d/m/Y H:i') }}</small>
                    </div>
                    <p>{{ comment.content|nl2br }}</p>

                    {# Like sur commentaire #}
                    <button class="btn like-comment-btn {{ likeCommentRepo.isCommentLikedByUser(comment, app.user) ? 'btn-success' : 'btn-outline-success' }}"
                        data-comment-id="{{ comment.id }}">
                        ‚ù§Ô∏è J'aime ({{ comment.likeComments|length }})
                    </button>
                </div>
            {% else %}
                <div class="list-group-item text-center text-muted">
                    Aucun commentaire pour l‚Äôinstant.
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/like-post.js') }}"></script>
    <script src="{{ asset('js/like-comment.js') }}"></script>
{% endblock %}
