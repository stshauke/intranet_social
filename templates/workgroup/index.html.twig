{% extends 'base.html.twig' %}

{% block title %}Liste des Groupes{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">üìã Liste des Groupes</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Type</th>
                <th>Cr√©ateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for workGroup in workGroups %}
                <tr>
                    <td>{{ workGroup.name }}</td>
                    <td>
                        {% if workGroup.type == 'public' %}
                            <span class="badge bg-success">Public</span>
                        {% elseif workGroup.type == 'private' %}
                            <span class="badge bg-warning text-dark">Priv√©</span>
                        {% elseif workGroup.type == 'secret' %}
                            <span class="badge bg-danger">Secret</span>
                        {% endif %}
                    </td>
                    <td>{{ workGroup.creator.fullName }}</td>
                    <td>
                        <a href="{{ path('workgroup_show', {id: workGroup.id}) }}" class="btn btn-info btn-sm">üëÅÔ∏è Voir</a>
                        <a href="{{ path('workgroup_edit', {id: workGroup.id}) }}" class="btn btn-primary btn-sm">‚úèÔ∏è Modifier</a>
                        <form method="post" action="{{ path('workgroup_delete', {id: workGroup.id}) }}" onsubmit="return confirm('Confirmer la suppression ?')" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ workGroup.id) }}">
                            <button class="btn btn-danger btn-sm">üóëÔ∏è Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">Aucun groupe trouv√©.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
