{% extends 'base.html.twig' %}

{% block title %}Mes Groupes{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">üë• Mes Groupes</h1>

    <div class="mb-3">
        <a href="{{ path('workgroup_new') }}" class="btn btn-primary">‚ûï Nouveau groupe</a>
    </div>

    {% set favoriteGroupIds = app.user ? app.user.favoriteGroups|map(f => f.group.id) : [] %}

    {% if workGroups is not empty %}
        <div class="row">
            {% for group in workGroups %}
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title mb-0">
                                    {{ group.name }}
                                    {% if group.id in favoriteGroupIds %}
                                        <span class="text-warning ms-1">‚≠ê</span>
                                    {% endif %}
                                </h5>
                            </div>
                            <p class="card-text mt-2">
                                <strong>Description :</strong> {{ group.description|default('Aucune description') }}<br>
                                <strong>Type :</strong> 
                                {% if group.type == 'public' %}
                                    <span class="badge bg-success">Public</span>
                                {% elseif group.type == 'private' %}
                                    <span class="badge bg-warning text-dark">Priv√©</span>
                                {% elseif group.type == 'secret' %}
                                    <span class="badge bg-danger">Secret</span>
                                {% endif %}<br>
                                <strong>Cr√©ateur :</strong> {{ group.creator.fullName }}
                            </p>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('workgroup_show', {id: group.id}) }}" class="btn btn-sm btn-outline-secondary">üëÅÔ∏è Voir</a>

                                {% if app.user == group.creator or group.moderators.contains(app.user) %}
                                    <a href="{{ path('workgroup_edit', {id: group.id}) }}" class="btn btn-sm btn-outline-primary">‚úèÔ∏è Modifier</a>
                                    <form method="post" action="{{ path('workgroup_delete', {id: group.id}) }}" onsubmit="return confirm('Confirmer la suppression ?')" style="display:inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.id) }}">
                                        <button class="btn btn-sm btn-outline-danger">üóëÔ∏è Supprimer</button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info">Aucun groupe pour l‚Äôinstant.</div>
    {% endif %}
</div>
{% endblock %}
