{# templates/message/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouveau message{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Envoyer un nouveau message</h1>

    {{ form_start(form) }}
        {{ form_row(form.recipient, {'label': 'Destinataire'}) }}
        {{ form_row(form.content, {'label': 'Message'}) }}
        <button class="btn btn-primary">Envoyer</button>
    {{ form_end(form) }}

    <a href="{{ path('app_message') }}" class="btn btn-secondary mt-3">← Retour à la messagerie</a>
</div>
{% endblock %}
