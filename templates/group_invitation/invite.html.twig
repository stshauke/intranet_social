{% extends 'base.html.twig' %}

{% block title %}Inviter un utilisateur{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">ðŸ“§ Inviter un utilisateur dans le groupe "{{ workGroup.name }}"</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.invitedUser) }}
            {{ form_widget(form.invitedUser, {'attr': {'class': 'form-control select2'}}) }}
