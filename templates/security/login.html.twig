{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container" style="max-width: 400px;">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Connexion à l'intranet</h2>

            {% if error %}
                <div class="alert alert-danger">
                    Identifiants incorrects. Veuillez réessayer.
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Adresse e-mail</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" required autofocus placeholder="email@example.com">
                </div>

                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    <input type="password" name="_password" id="inputPassword" class="form-control" required placeholder="Votre mot de passe">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-primary w-100" type="submit">Se connecter</button>
            </form>

            <div class="text-center mt-3">
                <small>Vous n'avez pas de compte ?</small>
                <a href="{{ path('app_register') }}" class="btn btn-outline-secondary w-100 mt-2">Créer un compte</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
